<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/define_dimen_16"
        android:background="@drawable/bg_white_corner_radius_20"
        android:orientation="vertical"
        android:padding="@dimen/define_dimen_12">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_20"
            android:gravity="center"
            android:text="@string/message_confirm_stop_task"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/define_dimen_20"
            android:layout_marginTop="@dimen/define_dimen_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_action_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_green_corner"
                android:gravity="center"
                android:paddingBottom="@dimen/define_dimen_10"
                android:paddingTop="@dimen/define_dimen_10"
                android:text="@string/stop"
                android:layout_marginRight="@dimen/define_dimen_10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_action_continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_orange_corner"
                android:gravity="center"
                android:paddingBottom="@dimen/define_dimen_10"
                android:paddingTop="@dimen/define_dimen_10"
                android:text="@string/label_continue"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
