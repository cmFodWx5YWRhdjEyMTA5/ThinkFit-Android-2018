<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize">

    <ImageView
        android:id="@+id/img_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/define_dimen_12"
        android:src="@drawable/ic_menu_black_36" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/define_dimen_10"
        android:layout_marginRight="@dimen/define_dimen_10"
        android:layout_toLeftOf="@+id/img_sort"
        android:layout_toRightOf="@+id/img_menu"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/orange"
        android:textSize="@dimen/text_size_xnormal" />

    <ImageView
        android:id="@+id/img_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/define_dimen_12"
        android:src="@drawable/ic_sort_black_36"
        android:visibility="visible" />

    <Switch
        android:id="@+id/sw_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/define_dimen_12"
        android:visibility="invisible" />

</RelativeLayout>
