<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/define_dimen_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_level"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_10"
            android:text="@string/label_oh_oh"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_xxnormal" />

        <ImageView
            android:layout_width="@dimen/define_dimen_120"
            android:layout_height="@dimen/define_dimen_120"
            android:layout_marginTop="@dimen/define_dimen_60"
            android:background="@drawable/shape_circle_orange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_60"
            android:text="@string/your_focus_time"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/define_dimen_5"
            android:text="20:00"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_xhuge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_done"
        android:layout_marginTop="@dimen/define_dimen_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_productivity_level"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/define_dimen_6"
            android:text="SUB"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/define_dimen_30"
        android:background="@drawable/bg_orange_corner"
        android:paddingBottom="@dimen/define_dimen_10"
        android:paddingLeft="@dimen/define_dimen_60"
        android:paddingRight="@dimen/define_dimen_60"
        android:paddingTop="@dimen/define_dimen_10"
        android:text="@string/done"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

</RelativeLayout>
